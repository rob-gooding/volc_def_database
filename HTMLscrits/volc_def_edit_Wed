                                        desc=study.description, ref=reference)
            studies = studies+"  "
            for reference in study.references:
                studies = studies + " ".format(ref=reference)
            studies = studies+" "
        
        events = "<h2> </h2>"
        for event in self.events:
            # Do we need to give events names?
            events = events+"""

                
             
                """.format(type=event.type,
                                        start=str(event.startdate), 
                                        end=str(event.enddate), 
                                        desc=event.description)
            eventss = eventss+" "
            for reference in event.references:
                events = events + " ".format(ref=reference)
            events = events+"</ul>"
        
        tail = "</body></html>"
        return head+events+studies+volc_refs+tail

class Event:
    "Something that happened to a volcano"
    
    def __init__(self):
        self.type = None
        self.description = ""
        self.reference = None
        self.startdate = None
        self.enddate = None
        self.references = []

class Study:
    "An observation of volcanic deformation"
    
    def __init__(self):
        self.type = None
        self.description = ""
        self.reference = None
        self.startdate = None
        self.enddate = None
        self.references = []

if __name__=="__main__":
    import sys
    mode = sys.argv[1]
    for file in sys.argv[2:]:
        volcano = Volcano(filename=file)
        if mode == "dump":
            volcano.dump()
        if mode == "html":
            print volcano.html()





